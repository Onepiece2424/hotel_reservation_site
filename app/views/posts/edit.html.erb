<h3>貸したい物件編集</h3>
 
    <%= form_for @post do |f| %>
      <table>
        <tr>
          <th><%= f.label :roomname ,"ルーム名" %></th>
          <td><%= f.text_field :roomname %></td>
        </tr>
        <tr>
          <th><%= f.label :introduction ,"ルーム紹介" %></th>
          <td><%= f.text_field :introduction %></td>
        </tr>
        <tr>
          <th><%= f.label :price ,"料金" %></th>
          <td><%= f.text_field :price %></td>
        </tr>
        <tr>
          <th><%= f.label :address ,"住所" %></th>
          <td><%= f.text_area :address %></td>
        </tr>
        <tr>
          <th><%= f.label :image,"ルーム画像" %></th>
          <% if @post.image? %>
          <td><%= image_tag(@post.image.url, width: 100)  %></td>
          <% else %>
          <td></td>
          <% end %>
        </tr>
        
      </table>
      <div>
        <ul>
          <li><%= f.submit "編集を完了する" %></li>
          <li><%= link_to "貸したい物件登録情報一覧に戻る", :posts %></li>
        </ul>
      </div>
    <% end %>