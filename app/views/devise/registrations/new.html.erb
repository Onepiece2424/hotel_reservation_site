<h2>ユーザー登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>  

  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "ユーザ名を入力してね！" %>
  </div>
  
  <div class="field">
    <%= f.label :email, "Eメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mailアドレスを入力してね！" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
   <%= f.label :introduction, "自己紹介" %><br />
    <%= f.text_field :introduction, autofocus: true %>
  </div>  
  
  <div class="field">
   <%= f.label :avatar, "アイコン画像" %><br />
   <%= f.file_field :avatar %>
  </div>
  
  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
<br>
<br>
